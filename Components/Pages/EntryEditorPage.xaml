<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevJournal.Pages.EntryEditorPage"
             Title="Journal Entry Editor"
             BackgroundColor="#ECF0F1">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <!-- Date Picker -->
            <Label Text="Entry Date:"
                   FontSize="16"
                   FontAttributes="Bold"/>
            <DatePicker x:Name="entryDatePicker"
                        Format="D"
                        DateSelected="OnDateSelected"
                        BackgroundColor="White"/>

            <!-- Title -->
            <Label Text="Title:"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
            <Entry x:Name="titleEntry"
                   Placeholder="Give your entry a title..."
                   BackgroundColor="White"
                   MaxLength="200"/>

            <!-- Mood Selection -->
            <Frame BackgroundColor="White"
                   BorderColor="#BDC3C7"
                   CornerRadius="10"
                   Padding="15"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Mood Tracking"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>

                    <Label Text="Primary Mood (Required):"
                           FontSize="14"
                           FontAttributes="Bold"/>
                    <Picker x:Name="primaryMoodPicker"
                            Title="Select primary mood"
                            BackgroundColor="#ECF0F1"/>

                    <Label Text="Secondary Mood 1 (Optional):"
                           FontSize="14"
                           Margin="0,10,0,0"/>
                    <Picker x:Name="secondaryMood1Picker"
                            Title="Select secondary mood 1"
                            BackgroundColor="#ECF0F1"/>

                    <Label Text="Secondary Mood 2 (Optional):"
                           FontSize="14"/>
                    <Picker x:Name="secondaryMood2Picker"
                            Title="Select secondary mood 2"
                            BackgroundColor="#ECF0F1"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Content -->
            <Label Text="Content:"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
            <Editor x:Name="contentEditor"
                    Placeholder="Write your thoughts here..."
                    HeightRequest="300"
                    BackgroundColor="White"
                    TextChanged="OnContentChanged"/>

            <Label x:Name="wordCountLabel"
                   Text="Words: 0"
                   FontSize="12"
                   TextColor="Gray"/>

            <!-- Buttons -->
            <Button Text="Save Entry"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#3498DB"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    Margin="0,20,0,10"/>

            <Button x:Name="deleteButton"
                    Text="Delete Entry"
                    Clicked="OnDeleteClicked"
                    BackgroundColor="#E74C3C"
                    TextColor="White"
                    FontSize="16"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>